<def-group>
  <definition class="compliance" id="{{{ rule_id }}}"  version="1">
    {{{ oval_metadata("Audit actions taken by system administrators on the system - /etc/sudoers.d/.") }}}
    <criteria operator="OR">
      <criteria operator="AND">
        <extend_definition comment="audit augenrules" definition_ref="audit_rules_augenrules" />
        <criterion comment="audit augenrules var_log_journal" test_ref="test_audit_rules_var_log_journal_augenrules" />
      </criteria>
      <criteria operator="AND">
        <extend_definition comment="audit auditctl" definition_ref="audit_rules_auditctl" />
        <criterion comment="audit auditctl var_log_journal" test_ref="test_audit_rules_var_log_journal_auditctl" />
      </criteria>
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" comment="audit augenrules sudoers" id="test_audit_rules_var_log_journal_augenrules" version="1">
    <ind:object object_ref="object_audit_rules_var_log_journal_augenrules" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_rules_var_log_journal_augenrules" version="1">
    <ind:filepath operation="pattern match">^/etc/audit/rules\.d/.*\.rules$</ind:filepath>
    <ind:pattern operation="pattern match">^\-w[\s]+/var/log/journal/[\s]+\-p[\s]+\b([rx]*w[rx]*a[rx]*|[rx]*a[rx]*w[rx]*)\b.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" comment="audit auditctl sudoers" id="test_audit_rules_var_log_journal_auditctl" version="1">
    <ind:object object_ref="object_audit_rules_var_log_journal_auditctl" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_rules_var_log_journal_auditctl" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^\-w[\s]+/var/log/journal/[\s]+\-p[\s]+\b([rx]*w[rx]*a[rx]*|[rx]*a[rx]*w[rx]*)\b.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
